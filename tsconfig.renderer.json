{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    // "allowImportingTsExtensions": true,
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/renderer/src/*"],
      "@common/*": ["src/common/*"]
    }
  },
  "include": ["src/renderer/**/*", "src/common/**/*"],
  "exclude": ["node_modules", "dist"]
}

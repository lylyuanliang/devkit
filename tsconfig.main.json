{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "noEmit": false,
    "baseUrl": ".",
    "skipLibCheck": true
  },
  "include": ["src/main/**/*", "src/common/**/*"],
  "exclude": ["node_modules", "dist", "src/renderer", "src/preload"]
}

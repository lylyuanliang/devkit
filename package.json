{
  "name": "devkit",
  "version": "0.11.0",
  "description": "DevKit - 开发工具集合（包含 Kafka Client 等工具）",
  "main": "dist/main/index.js",
  "author": {
    "name": "DevKit Team",
    "email": "team@devkit.com"
  },
  "license": "MIT",
  "keywords": [
    "kafka",
    "client",
    "desktop",
    "electron",
    "react",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:lylyuanliang/devkit.git"
  },
  "scripts": {
    "dev": "npm run build:main && npm run build:preload && concurrently \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:renderer": "vite",
    "dev:main": "tsc -p tsconfig.main.json --watch",
    "dev:preload": "tsc -p tsconfig.preload.json --watch",
    "dev:electron": "wait-on http://localhost:5173 -t 10000 && cross-env NODE_ENV=development electron .",
    "clean": "node -e \"require('fs').rmSync('dist', {recursive:true, force:true}); require('fs').rmSync('release', {recursive:true, force:true})\"",
    "clean:dist": "node -e \"require('fs').rmSync('dist', {recursive:true, force:true})\"",
    "clean:release": "node -e \"require('fs').rmSync('release', {recursive:true, force:true})\"",
    "prebuild": "npm run clean:dist",
    "build": "npm run build:renderer && npm run build:main && npm run build:preload",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "prepackage": "npm run clean",
    "package": "npm run build && electron-builder -c electron-builder.yml",
    "package:win": "npm run build && electron-builder --win -c electron-builder.yml",
    "package:win:simple": "npm run build && npx --yes electron-packager . DevKit --platform=win32 --arch=x64 --out=release --overwrite",
    "package:mac": "npm run build && electron-builder --mac -c electron-builder.yml",
    "package:linux": "npm run build && electron-builder --linux -c electron-builder.yml",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,css,md}\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "type-check": "tsc --noEmit",
    "prepare": "husky install"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "kafkajs": "^2.2.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.1",
    "antd": "^5.12.8",
    "zustand": "^4.4.7",
    "@ant-design/icons": "^5.2.6",
    "dayjs": "^1.11.10",
    "immer": "^10.0.3",
    "lodash-es": "^4.17.21",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@types/lodash-es": "^4.17.12",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vitejs/plugin-react": "^4.2.1",
    "vite": "^5.0.10",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.1.1",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0",
    "cross-env": "^7.0.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "vitest": "^1.1.1",
    "@vitest/ui": "^1.1.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
